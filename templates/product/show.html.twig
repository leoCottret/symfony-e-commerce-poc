{% extends 'base.html.twig' %}

{% block title %}{{ product.name }} - {{ brand_name }}{% endblock %}

{% block content %}

    <div class="row">
        <div class="col-md-5">
            <img src="/uploads/{{ product.illustration }}" alt="{{ product.name }}" class="img-fluid">
        </div>
        <!-- my-auto center tag vertically -->
        <div class="col-md-7 my-auto">
            <h3>{{ product.name }}</h3>
            <p>{{ product.subtitle }}</p>
            <div class="product-price-single">{{ (product.price / 100)|number_format(2) }} â‚¬</div>
            <hr>
            <p>
                {{ product.description }}
            </p>
            <a href="{{ path('add_to_cart', { 'id' : product.id }) }}"  class="btn btn-primary">Ajouter au panier</a>
        </div>
    </div>
    <hr>
    <h3 class="mb-3">Nos meilleurs ventes</h3>
    <div class="row mb-5">
        {% for product in products %}
            <div class="col-md-3">
                {% include "product/single_product.html.twig" %}
            </div>
        {% endfor %}
    </div>
    
{% endblock %}
