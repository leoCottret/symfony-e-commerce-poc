{% extends 'base.html.twig' %}

{% block title %}Nos produits - {{ brand_name }}{% endblock %}

{% block content %}

    <div class="row">
        <!-- Left part -->
        <div class="col-md-3">
            <h3>Filtrer</h3>
            {{ form(form) }}
        </div>
        <!-- Right part -->
        <div class="col-md-9">
        <h3>Nos produits</h3>

        <div class="row">
            {% for product in products %}
                <div class="col-md-4">
                        <div class="product-item text-center">
                            <a href="{{ path('product', { 'slug' : product.slug }) }}"><img src="/uploads/{{ product.illustration }}" alt="{{ product.name }}" class="img-fluid"></a>
                            <h5>{{ product.name }}</h5>
                            <div class="product-subtitle">{{ product.subtitle }}</div>
                            <div class="product-price">{{ (product.price / 100)|number_format(2) }} â‚¬</div>   
                        </div>
                </div>
            {% endfor %}
        </div>
    </div>

    
    
{% endblock %}
